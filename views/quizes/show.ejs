
	<form method="get" action="/quizes/<%= quiz.id %>/answer">
		<legend>Pregunta: <%= quiz.pregunta %></legend>
		<label for="question">Respuesta:
			<input id="question" name="respuesta" type="text" placeholder="Responda aquÃ­" />
			<input type="submit" value="Enviar" />
		</label>
	</form>
	<section id="lista-comentarios">
		<h3>Comentarios</h3>
		<% for (var comment in quiz.Comments) { %>
			<% if (quiz.Comments[comment].publicado === true || session.user !== undefined) { %>
		<article class="comentario">
			<div>
				<%= quiz.Comments[comment].texto %>
				<% if (quiz.Comments[comment].publicado === false) { %>
				<a href="/quizes/<%= quiz.id %>/comments/<%= quiz.Comments[comment].id %>/publish"><button type="button">Publicar</button></a>
				<% } %>
			</div>
		</article>
			<% } %>
		<% } %>
		<a href="/quizes/<%= quiz.id %>/comments/new">
			<button type="text">Agregar comentario</button>
		</a>
	</section>